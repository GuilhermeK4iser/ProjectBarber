<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorview"
    tools:context=".AgendmntListActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/agendmnts_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/listheader_border"
            android:fontFamily="@font/sfpro"
            android:gravity="center_horizontal"
            android:paddingHorizontal="20dp"
            android:text="@string/todos_os_agendamentos"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </TableRow>

    <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">

        <ListView
            android:id="@+id/agendmnts_list"
            android:layout_width="382dp"
            android:layout_height="623dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:padding="25dp"
            android:background="@drawable/agendmntitem_border" />
    </TableRow>
</TableLayout>